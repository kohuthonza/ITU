<Window x:Class="ITU.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITU"
        mc:Ignorable="d"
        MinWidth="550"
        MinHeight="350"
        WindowStartupLocation="CenterScreen"
        Title="Květinátor" Height="350" Width="550">
    <Grid Margin="10,30,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Margin="10" HorizontalAlignment="Right" Content="_Přihlašovací jméno" Target="{Binding ElementName=loginBox}" />
        <TextBox Grid.Row="0" Grid.Column="1" Margin="10"  Name="loginBox" />
        <Label Grid.Row="1" Grid.Column="0" Margin="10" HorizontalAlignment="Right" Content="_Heslo" Target="{Binding ElementName=passwdBox}" />
        <PasswordBox Grid.Row="1" Grid.Column="1" Margin="10" Name="passwdBox" />

        <Button Grid.Row="3" Grid.Column="1" Margin="10" Name="loginBtn" Click="loginBtn_Click">Přihlásit se</Button>
        <Button Grid.Row="4" Grid.Column="1" Margin="10" Name="addUserBtn" Click="addUserBtn_Click">Přidat uživatele</Button>


    </Grid>    
</Window>
