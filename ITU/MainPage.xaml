<Page x:Class="ITU.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ITU"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="550"
      Title="Květinátor">

    <Grid Name="main_grid" Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10,0,0,0" FontSize="100" HorizontalAlignment="Center" Text="Květinátor"></TextBlock>

        <Grid Grid.Row="1" Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="4" Grid.Column="0" Name="startBtn" IsDefault="True" Click="startBtn_Click">Začít</Button>
            <Button Grid.Row="4" Grid.Column="2" Name="accBtn" Click="accBtn_Click">Květinátoři</Button>
            <Button Grid.Row="4" Grid.Column="4" Name="endBtn" Click="endBtn_Click">Ukončit</Button>
        </Grid>
    </Grid>
</Page>
